# PostgreSQL 설정 (Docker)
POSTGRES_USER=blog_user
POSTGRES_PASSWORD=blog_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=blog_db



# 테스트 데이터베이스 설정
POSTGRES_TEST_USER=blog_user
POSTGRES_TEST_PASSWORD=blog_password
POSTGRES_TEST_HOST=localhost
POSTGRES_TEST_PORT=5432
POSTGRES_DB=blog_db

ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here

DB_TYPE=postgresql
# 애플리케이션 설정
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-this-in-production

# 관리자 설정
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-admin-password-here

# PostgreSQL 데이터베이스 설정
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=blog_db

# 테스트 데이터베이스 설정
POSTGRES_TEST_HOST=localhost
POSTGRES_TEST_PORT=5432
POSTGRES_TEST_USER=postgres
POSTGRES_TEST_PASSWORD=your-postgres-password
POSTGRES_TEST_DB=test_blog_db

# 데이터베이스 URL (선택사항 - config.py에서 자동 생성됨)
DATABASE_URL=postgresql://postgres:your-postgres-password@localhost:5432/blog_db
DATABASE_TEST_URL=postgresql://postgres:your-postgres-password@localhost:5432/test_blog_db

# 이메일 설정
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Redis 설정 (캐싱 및 작업 큐용)
REDIS_URL=redis://localhost:6379/0

# 파일 업로드 설정
UPLOAD_FOLDER=app/static/uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,ico,svg,webp

# 구글 리캡차 설정
RECAPTCHA_PUBLIC_KEY=your-recaptcha-site-key
RECAPTCHA_PRIVATE_KEY=your-recaptcha-secret-key

# 소셜 로그인 설정
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# 모니터링 및 분석
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=UA-XXXXX-Y

# JWT 설정
JWT_EXPIRATION_SECONDS=3600
